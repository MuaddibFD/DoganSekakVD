@model IEnumerable<CategoryModel>

@{
    ViewBag.Title = "Ürün Kategorileri";

}

<h1>@ViewBag.Title</h1>

<p>
    <a asp-action="Create" class="create_buttons"><i style="color: yellow;" class="fas fa-plus-square"></i> Create New</a>
</p>
<table id="categories" class="ui celled table">
    <thead>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Name)
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn btn-outline-primary circlebutton" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i> Edit</a>
                        @:&nbsp; &nbsp;
                        <a class="btn btn-danger circlebutton" onclick="deleteCategory(@item.Id);"><i class="fas fa-trash"></i> Delete</a>
                    }
                    &nbsp; &nbsp;
                    <a class="btn btn-secondary circlebutton" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i> Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
