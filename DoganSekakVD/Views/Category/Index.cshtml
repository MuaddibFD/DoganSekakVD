    <script src="~/lib/datatables/js/dataTables.jqueryui.js"></script>
    <link href="~/lib/datatables/css/jquery.dataTables.css" rel="stylesheet" />
    <script src="~/lib/AlertifyJS/alertify.min.js"></script>
    <link href="~/lib/AlertifyJS/css/alertify.min.css" rel="stylesheet" />
    <script>
        $(document).ready(function () {
            BindDataTable("categories");
        });
        function deletecategory(id) {
            alertify.confirm("Warning",
                "Are you sure do you want to delete this category?",
                function () {
                    window.location.href = "/Category/Delete/" + id;
                },
                function () {
                    alertify.error("Delete cancel");
                }
            );
        };
    </script>
}